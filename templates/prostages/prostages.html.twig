{% extends 'base.html.twig' %}

{% block title %}Bienvenue sur Prostages!{% endblock %}


{% block body %}

        <div class="container-fluid">

            <div class="row">
                <div class="col-4 offset-4 text-center">
                    <div class="p-3 border bg-light">
                        <h1 class="text-danger">✤ Bienvenue sur Prostages ! ✤</h1>
                    </div>
                </div>
            </div>

            <div class="row">.</div>

            <div class="row">

                <div class="col-3 offset-1 text-center">
                    <div class="p-3 border bg-light">
                        <BR><h1>✽ Filtres ✽</h1><BR><hr><BR>
                        <h3 class="border">📚 Formations</h3><BR>
                        {% for formation in ressourcesFormations %}
                            <a href={{path('Formations',{id:formation.id})}} class="text-black text-decoration-none"><h5>{{ formation.nomLong }}</h5></a>
                        {% endfor %}
                        <BR><hr><BR><h3 class="border">💻 Entreprises</h3><BR>
                        {% for entreprise in ressourcesEntreprises %}
                            <a href={{path('Entreprises',{id:entreprise.id})}} class="text-black text-decoration-none"><h5>{{ entreprise.nom }}</h5></a>
                        {% endfor %}    
                    </div>
                </div>
                
                <div class="col-7">
                    <div class="p-3 border bg-light">
                        <BR><h1 class="text-center">Tous les stages 💼</h1><BR><hr><BR>
                        <ul>
                            {% for stage in ressourcesStages %}
                                <div class="card mb-4">
                                    <div class="card-header bg-dark">
                                        <a href=./stages/{{ stage.id }} class="text-white text-decoration-none"><h2>📝 {{ stage.titre }}</h2></a>
                                    </div>
                                    <div class="card-body">
                                        <ul class="list-group list-group-flush">
                                            <li class="list-group-item"><h6>✉ Mail : {{ stage.email }}</li>
                                        </ul>
                                    </div>
                                </div><BR>
                                
                            {% endfor %}
                        </ul>
                    </div>
                </div>
                
            </div>
        </div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" 
integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" 
crossorigin="anonymous"></script>

{% endblock %}