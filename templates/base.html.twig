<!DOCTYPE html>
<html>
    <head>
        {# Un peu de CSS sur les diff√©rentes parties du template #}
            {% block css %}
                <style> 
                    .body { 
                        background-color: rgb(241,237,236); 
                    } 
                    .barre {
                        background-color: rgb(50,50,50);
                        height: 3px;
                        width: 100%;
                    }
                    .footer{
                        position:relative;
                        bottom:0;
                        width:100%;
                    }
                </style> 
            {% endblock %}

        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">

        <title>{% block title %}Prostages{% endblock %}</title>
  
        {% block stylesheets %}
             <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" 
            integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" 
            crossorigin="anonymous">
        {% endblock %}

    </head>

    <body class="body mb-5">
        <header>
            {% block header %}
            <div class="barre"></div>

            <div id="carouselExampleCaptions" class="carousel slide" data-bs-ride="carousel">
                <div class="carousel-inner">
                    <div class="carousel-item active data-bs-interval="2000"">
                    <img src="https://pbs.twimg.com/media/FLBNUaqWYAQcDap?format=jpg&name=large" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item data-bs-interval="2000"">
                    <img src="https://pbs.twimg.com/media/FLBNUarXsAcJkib?format=jpg&name=large" class="d-block w-100" alt="...">
                    </div>
                    <div class="carousel-item data-bs-interval="2000"">
                    <img src="https://pbs.twimg.com/media/FLBNUapWQAElcCj?format=jpg&name=large" class="d-block w-100" alt="...">
                    </div>
                </div>
                <button class="carousel-control-prev primary" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="prev">
                    <span class="carousel-control-prev-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Previous</span>
                </button>
                <button class="carousel-control-next" type="button" data-bs-target="#carouselExampleCaptions" data-bs-slide="next">
                    <span class="carousel-control-next-icon" aria-hidden="true"></span>
                    <span class="visually-hidden">Next</span>
                </button>
            </div>
            <div class="barre"></div>
            {% endblock %}

        </header>

{% block menu %}
        <div class="row">
              <div class="col-md-12">
                <nav class="navbar navbar-expand-lg navbar-light bg-light">
                  <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#bs-example-navbar-collapse-1">
                    <span class="navbar-toggler-icon"></span>
                  </button>
                  <div class="collapse navbar-collapse  justify-content-between" id="bs-example-navbar-collapse-1">

                      {# Fonctionnalit√©s pour l'administrateur #}
                      {% if is_granted('ROLE_ADMIN') %}
                        <a class="nav-link" href="{{path('AjoutFormation')}}">
                          <font color="#5D5C5C">Ajouter une formation</font>
                        </a>

                        <a class="nav-link" href="{{path('AjoutEntreprise')}}">
                          <font color="#5D5C5C">Ajouter une entreprise</font>
                        </a>
                      
                      {% endif %}

                      {# Fonctionnalit√©s pour l'utilisateur authentifi√© #}
                      {% if is_granted('ROLE_USER') %}

                      <a class="nav-link" href="{{path('AjoutStage')}}">
                          <font color="#5D5C5C">Ajouter un stage</font>
                        </a>

                        <a class="nav-link" href="{{path('app_logout')}}">
                          <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/48/Simpleicons_Interface_power-symbol-1.svg/15px-Simpleicons_Interface_power-symbol-1.svg.png"> <b><font color="black">{{ app.user.prenom }} {{ app.user.nom }} - D√©connexion</font></b>
                        </a>  

                      {% else %}
                      {# Fonctionnalit√©s pour l'utilisateur NON authentifi√© #}                      
                        <img src="https://upload.wikimedia.org/wikipedia/commons/thumb/4/48/Simpleicons_Interface_power-symbol-1.svg/15px-Simpleicons_Interface_power-symbol-1.svg.png"><a class="nav-link" href="{{path('app_login')}}"><b><font color="black">Connexion</font></b></a>
                      {% endif %}
                  </div>
                </nav>
              </div>
              <div class="barre"></div>
            </div>
          {% endblock %}


    {% block body %}{% endblock %}
    </body>

    <footer class="footer">
        {% block footer %}
            <div class="p-5 border bg-light"; 
            height: 150px;">
            <div class="d-flex justify-content-center align-items-center">
                <div class="text-black">
                    <h6 class="mb-3"><font size="4" face="Georgia, Arial">Ce site a √©t√© r√©alis√© par Nathan Delcambre. üåä</font></h6>
                </div>
            </div>
            </div>
        {% endblock %}
    </footer>
    

</html>



